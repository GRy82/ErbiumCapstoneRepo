@model ErbiumCapstone.Models.Job

@{
    ViewData["Title"] = "Create Job";
    List<string> jobTypes = (List<string>)ViewData["jobTypes"];
}

<h1>Create New Job</h1>



<div class="form-group">
    <label asp-for="JobName"></label>
    <input asp-for="JobName" class="form-control" />
    <span asp-validation-for="JobName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="JobType"></label>
    <select asp-for="JobType" class="form-control" asp-items="new SelectList(jobTypes)"></select>
    <span asp-validation-for="JobType" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="JobStart"></label>
    <input asp-for="JobStart" class="form-control" />
    <span asp-validation-for="JobStart" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="JobCompletion"></label>
    <input asp-for="JobCompletion" class="form-control" />
    <span asp-validation-for="JobCompletion" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>





