@model ErbiumCapstone.Models.Job

@{
    ViewData["Title"] = "EditJob";
}

<h1>EditJob</h1>

<h4>Job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditJob">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />

            <input type="hidden" asp-for="JobId" />
            <div class="form-group">
                <label asp-for="JobName" class="control-label"></label>
                <input asp-for="JobName" class="form-control" />
                <span asp-validation-for="JobName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobType" class="control-label"></label>
                <input asp-for="JobType" class="form-control" />
                <span asp-validation-for="JobType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProposedCost" class="control-label"></label>
                <input asp-for="ProposedCost" class="form-control" />
                <span asp-validation-for="ProposedCost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="JobStart" class="control-label"></label>
                <input asp-for="JobStart" class="form-control" />
                <span asp-validation-for="JobStart" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeadLine" class="control-label"></label>
                <input asp-for="DeadLine" class="form-control" />
                <span asp-validation-for="DeadLine" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isJobCompletionApproved" /> @Html.DisplayNameFor(model => model.isJobCompletionApproved)
                </label>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ProvideUpdates" /> @Html.DisplayNameFor(model => model.ProvideUpdates)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ProvidePix" /> @Html.DisplayNameFor(model => model.ProvidePix)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfUpdates" class="control-label"></label>
                <input asp-for="NumberOfUpdates" class="form-control" />
                <span asp-validation-for="NumberOfUpdates" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
