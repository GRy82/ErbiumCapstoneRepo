@model ErbiumCapstone.Models.Job

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
    <h4>Completed Jobs</h4>
    <hr />
    <form asp-action="GetPastJobs">
        <div>

            <label> Completed Jobs </label>
            <select name="" asp-items="ViewBag.GetPastJobs"></select>

        </div>
    </form>
    <div>
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JobName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JobName)
            </dd>
        </dl>
    </div>
    <div style="float: left">
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Contractor)
            </dt>
        </dl>
    </div>
    <div style="float: right">
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AgreedCost)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AgreedCost)
            </dd>
        </dl>
    </div>

    <div>
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProvidePix)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProvidePix)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.JobCompletion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.JobCompletion)
            </dd>
        </dl>
    </div>

    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobType)
        </dd>



        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>



        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobStart)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobStart)
        </dd>


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.JobId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>